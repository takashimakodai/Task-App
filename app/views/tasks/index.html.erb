<% provide(:title, "All Tasks") %>
<h1>管理者のタスク一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>作成日</th>
      </tr>
     </thead>
     
     <% @tasks.each do |task| %>
       <tr>
         <td><%= task.task_name %></td>
         <td><%= task.created_at %></td>
         <td><%= link_to "編集", "#", class: "btn btn-lg pull-right btn-success" %></td>
         <td><%= link_to "削除", "#", class: "btn btn-lg btn-danger" %></td>
       </tr>
     <% end %>
  </table>
</div>    


