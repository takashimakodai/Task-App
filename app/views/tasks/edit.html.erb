<% provide(:title, "Task Edit") %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @task, url: user_task_path(@user), local: true) do |f| %>

      <%= f.label :task_name, class: "label-signup" %>
      <%= f.text_field :task_name, class: "form-control" %>
    
      <%= f.label :note, class: "label-signup" %>
      <%= f.text_area :note, class: "form-control", size: "20x5" %>
    
      <%= f.submit "更新", class: "btn btn-md btn-primary btn-signup" %>
      <%= link_to "キャンセル",user_tasks_path, class:"btn btn-md btn-default btn-signup" %>
    <% end %>
  </div>
</div>
