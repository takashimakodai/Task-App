<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, id: "top-logo" %></li>
        
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "利用者一覧", users_path, id: "top-logo" %></li>
          <% end %>
          <li><%= link_to "タスク作成", new_user_task_path(current_user), id: "top-logo" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>ユーザー</li>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "ユーザー設定", edit_user_path(current_user) %></li>
              <li>タスク</li>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, id: "top-logo" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
