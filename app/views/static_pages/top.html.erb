<% provide(:title, "Top") %>
<class="container">
  <div class="center">
    <div class= "col-md-7">
    <h3>TaskApp</h3>
      <P>TaskAppは簡易ToDo管理ツールです。</P>
      <P>↓↓初めてのご利用↓↓</P>
        <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
    </div>
  </div>
  
    <div class="col-md-4">
    <h2>ログイン</h2>
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        
          <%= f.label :email, "メールアドレス", class: "label-signup" %>
          <%= f.email_field :email, class: "form-control" %>
      
          <%= f.label :password, "パスワード", class: "label-signup" %>
          <%= f.password_field :password, class: "form-control" %>
          
          <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
            <%= f.check_box :remember_me, id: "remember-me" %>
          <span>ログイン情報を記憶する</span>
          <% end %>
  
          <%= f.submit "ログイン", class: "btn btn-block btn-primary btn-signup" %>
        <% end %>
    </div>
</class>
